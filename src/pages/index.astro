---
import Layout from "../layouts/Layout.astro";
import { experience, skills } from "./data";
---

<Layout>
	<main class="space-y-28 sm:space-y-40 py-5">
		<section>
			<h1 class="text-3xl sm:text-5xl md:text-6xl lg:text-[78px]">
				MÁS QUE CÓDIGO: ESTRATEGIA, ESCALABILIDAD, LIDERAZGO
			</h1>
		</section>

		<section
			class="flex flex-col lg:flex-row justify-between w-full gap-y-8 gap-x-5"
		>
			<div class="w-full flex flex-col justify-center items-start">
				<div
					class="flex flex-col items-end space-x-4 md:space-x-5 lg:space-x-7"
				>
					<div class="flex flex-row items-end">
						<h2 class="text-5xl md:text-6xl lg:text-7xl">JHON</h2>
						<p
							class="text-[8px] md:text-[10px] lg:text-xs mb-2 mx-2"
						>
							DESARROLLADOR Y LÍDER FRONTEND
						</p>
					</div>
					<h2 class="text-5xl md:text-6xl lg:text-7xl">RIVERO</h2>
				</div>
			</div>

			<div class="w-full space-y-5">
				<p>SOBRE MÍ</p>
				<p class="text-xs sm:text-sm">
					SOY DESARROLLADOR Y LÍDER FRONTEND CON EXPERIENCIA EN LA
					CREACIÓN DE APLICACIONES WEB MODERNAS QUE INTEGREN
					FUNCIONALIDAD, RENDIMIENTO Y DISEÑO. DOMINO FRAMEWORKS COMO
					SVELTE, VUE/QUASAR, REACT, ASTRO, ADEMÁS DE TENER
					CONOCIMIENTO EN AUTOMATIZACIÓN DE PRUEBAS DE QA CON
					HERRAMIENTAS COMO PUPPETEER Y K6 PARA PRUEBAS DE RENDIMIENTO
					DE APIS. TAMBIÉN TENGO EXPERIENCIA LIDERANDO EQUIPOS Y
					DEFINIENDO ARQUITECTURAS FRONTEND ESCALABLES.
				</p>
				<p class="text-xs sm:text-sm">
					COMO LÍDER, PROMUEVO LA ADOPCIÓN DE BUENAS PRÁCTICAS, LA
					MENTORÍA TÉCNICA Y LA MEJORA CONSTANTE EN LOS PROCESOS DE
					DESARROLLO. ESTOY COMPROMETIDO CON EL APRENDIZAJE CONTINUO Y
					LA INCORPORACIÓN DE TECNOLOGÍAS INNOVADORAS.
				</p>
			</div>
		</section>

		<section>
			<div
				class="flex flex-row items-center justify-around gap-5 overflow-x-auto"
			>
				<div class="flex flex-col items-center space-y-4">
					<img src="src/assets/svelte.svg" />
					<span class="text-sm opacity-50">SVELTEKIT</span>
				</div>
				<div class="flex flex-col items-center space-y-4">
					<img src="src/assets/svelte.svg" />
					<span class="text-sm opacity-50">SVELTEKIT</span>
				</div>
				<div class="flex flex-col items-center space-y-4">
					<img src="src/assets/svelte.svg" />
					<span class="text-sm opacity-50">SVELTEKIT</span>
				</div>
				<div class="flex flex-col items-center space-y-4">
					<img src="src/assets/svelte.svg" />
					<span class="text-sm opacity-50">SVELTEKIT</span>
				</div>
				<div class="flex flex-col items-center space-y-4">
					<img src="src/assets/svelte.svg" />
					<span class="text-sm opacity-50">SVELTEKIT</span>
				</div>
				<div class="flex flex-col items-center space-y-4">
					<img src="src/assets/svelte.svg" />
					<span class="text-sm opacity-50">SVELTEKIT</span>
				</div>
				<div class="flex flex-col items-center space-y-4">
					<img src="src/assets/svelte.svg" />
					<span class="text-sm opacity-50">SVELTEKIT</span>
				</div>
			</div>
		</section>

		<section>
			<div class="w-full space-y-5">
				<p>HABILIDADES</p>

				<div class="grid md:grid-cols-2 gap-5">
					{
						skills.map((item, index) => (
							<div
								class={`flex flex-row items-center gap-2 ${index % 2 === 1 ? "md:order-none order-1" : "order-0"}`}
							>
								<div>
									<item.icon />
								</div>
								<span class="text-xs sm:text-sm">
									{item.text}
								</span>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<section>
			<div class="w-full space-y-5">
				<p class="pb-2">HABILIDADES</p>

				<div class="grid md:grid-cols-2 justify-center gap-10">
					{
						experience.map((item) => (
							<div class="relative">
								<div class="absolute top-[-10px] right-[-10px] w-full h-full bg-[#F5F5F5] rounded-2xl" />
								<div class="w-full p-5 bg-[#1F2430] rounded-2xl relative border-2 border-white">
									<div class="flex flex-col h-full items-center justify-center space-y-8">
										<div class="flex flex-col gap-5 justify-center  items-center lg:flex-row lg:justify-around w-full">
											<img
												class="max-w-40"
												src={item.image}
												alt="LinkTic Logo"
											/>
											<div class="text-center">
												<p class="text-xs sm:text-md lg:text-xl">
													{item.name}
												</p>
												<p class="text-[10px] sm:text-xs lg:text-sm">
													{item.jobposition}
												</p>
												<p class="text-[8px] sm:text-[10px] lg:text-xs opacity-60">
													{item.date}
												</p>
											</div>
										</div>
										<div class="flex flex-col items-center mx-auto justify-center gap-5">
											<p class="text-[10px] md:text-xs">
												{item.description1}
											</p>
											<p class="text-[10px] md:text-xs">
												{item.description2}
											</p>
										</div>
									</div>
								</div>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<section>
			<div class="w-full space-y-5">
				<p class="pb-2">RECOMENDACIONES</p>

				<div class="grid md:grid-cols-3 justify-center gap-10">
					<div class="relative">
						<div
							class="absolute top-[-10px] right-[-10px] w-full h-full bg-[#F5F5F5] rounded-2xl"
						>
						</div>

						<div
							class="w-full p-5 bg-[#1F2430] rounded-2xl relative border-2 border-white"
						>
							<div
								class="flex flex-col p-5 items-center justify-center"
							>
								<div
									class="w-20 h-20 bg-[#F5F5F5] rounded-full"
								>
								</div>
								<p class="text-sm pt-5">PABLO PÉREZ</p>
								<p class="text-[10px] pt-1">DESARROLLADOR FULLSTACK</p>
								<p class="text-[8px] pt-1">
									29 DE SEPTIEMBRE DE 2022, PABLO TRABAJABA
									CON JHON
								</p>
							</div>
							<p class="text-[10px] sm:text-xs">
								Lorem ipsum dolor sit amet, consectetur
								adipiscing elit, sed do eiusmod tempor
								incididunt ut labore et dolore magna aliqua.
								Ut enim ad minim veniam, quis nostrud
								exercitation ullamco laboris nisi ut aliquip
								ex ea commodo consequat. Duis aute irure
								dolor in reprehenderit in voluptate velit
								esse cillum dolore eu fugiat nulla pariatur.
								Excepteur sint occaecat cupidatat non
								proident, sunt in culpa qui officia deserunt
								mollit anim id est laborum
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>

---
import "../styles/carousel.css";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { experience, skills, habilitiesCarousel } from "./data";
import Recommendations from "../../public/recommendations.json";
---

<Layout>
	<section class="space-y-20 sm:space-y-40 md:mt-40 pb-5">
		<section id="init">
			<h1 class="fade-in text-3xl sm:text-5xl md:text-6xl lg:text-[78px]">
				MÁS QUE CÓDIGO: ESTRATEGIA, ESCALABILIDAD, LIDERAZGO
			</h1>
		</section>

		<section
			id="about-me"
			class="flex flex-col lg:flex-row justify-between w-full gap-y-8 gap-x-5"
		>
			<div
				class="fade-in sm:slide-right w-full flex flex-col justify-center items-start"
			>
				<div
					class="flex flex-col items-end space-x-4 md:space-x-5 lg:space-x-7"
				>
					<div class="flex flex-row items-end">
						<h2 class="text-5xl md:text-6xl lg:text-7xl">JHON</h2>
						<p
							class="text-[8px] md:text-[10px] lg:text-xs mb-2 mx-2"
						>
							DESARROLLADOR Y LÍDER FRONTEND
						</p>
					</div>
					<h2 class="text-5xl md:text-6xl lg:text-7xl">RIVERO</h2>
				</div>
			</div>

			<div class="fade-in sm:slide-left w-full space-y-5">
				<p class="text-xs sm:text-base">
					Soy desarrollador y líder frontend con experiencia en la
					creación de aplicaciones web modernas, optimizando
					rendimiento, funcionalidad y diseño. Domino librerías y
					frameworks Svelte, Vue/Quasar, React y Astro, además de
					automatización de pruebas de QA con Node.JS, Puppeteer y K6.
					Tengo experiencia liderando equipos y definiendo
					arquitecturas frontend escalables.
				</p>
				<p class="text-xs sm:text-base">
					Como líder, promuevo la adopción de buenas prácticas, la
					mentoría técnica y la mejora constante en los procesos de
					desarrollo. estoy comprometido con el aprendizaje continuo y
					la incorporación de tecnologías innovadoras.
				</p>
			</div>
		</section>

		<section>
			<div class="carousel-container">
				<div class="carousel-track">
					{
						[...habilitiesCarousel, ...habilitiesCarousel].map(
							(item) => (
								<div class="carousel-item flex flex-col items-center justify-end space-y-4 opacity-50 hover:opacity-80 transition hover:scale-110 duration-500">
									<div class="w-20 h-20">
										<item.icon />
									</div>
									<span class="text-sm">{item.text}</span>
								</div>
							),
						)
					}
				</div>
			</div>
		</section>

		<section id="habilities">
			<div class="slide-left w-full space-y-5">
				<p>HABILIDADES</p>

				<div class="grid md:grid-cols-2 gap-y-5 gap-x-12">
					{
						skills.map((item, index) => (
							<div
								class={`flex flex-row items-center gap-2 ${index % 2 === 1 ? "md:order-none order-1" : "order-0"}`}
							>
								<div>
									<item.icon />
								</div>
								<span class="text-xs sm:text-base">
									{item.text}
								</span>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<section id="experience">
			<div class="slide-left w-full space-y-5">
				<p class="pb-2">EXPERIENCIA</p>

				<div class="grid md:grid-cols-2 justify-center gap-10">
					{
						experience.map((item) => (
							<div class="relative">
								<div class="absolute top-[-10px] right-[-10px] w-full h-full bg-[#F5F5F5] rounded-2xl" />
								<div class="w-full p-5 bg-[#1F2430] rounded-2xl relative border-2 border-white h-full min-h-[350px]">
									<div class="flex flex-col h-full items-center justify-center space-y-8">
										<div class="flex flex-col gap-5 justify-center items-center lg:flex-row lg:justify-around w-full">
											<Image
												src={item.image}
												alt={item.name}
												class="max-w-40"
												loading="lazy"
											/>
											<div class="text-center">
												<p class="text-xs sm:text-md lg:text-xl">
													{item.name}
												</p>
												<p class="text-[10px] sm:text-xs lg:text-sm">
													{item.jobposition}
												</p>
												<p class="text-[8px] sm:text-[10px] lg:text-xs opacity-60">
													{item.date}
												</p>
											</div>
										</div>
										<div class="flex flex-col items-center mx-auto justify-center gap-5">
											<p class="text-[10px] md:text-sm">
												{item.description1}
											</p>
											<p class="text-[10px] md:text-sm">
												{item.description2}
											</p>
										</div>
									</div>
								</div>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<section id="recomendations">
			<div class="fade-in w-full space-y-5">
				<div class="flex flex-wrap gap-y-2 gap-x-4 justify-between w-full items-center">
					<p class="pb-2">RECOMENDACIONES</p>
					<button id="pauseBtn" class="pause-btn cursor-pointer text-xs ml-auto">⏸ Pausar</button>
				</div>

				<div class="carousel-container-recomendations">
					<div class="carousel-track-recomendations">
						{
							[...Recommendations, ...Recommendations]
								.filter((item) => item.author !== "Desconocido")
								.map((item) => (
									<div class="carousel-item-recomendations opacity-90">
										<div class="relative">
											<div class="absolute top-[-10px] right-[-10px] w-full min-h-[400px] bg-[#F5F5F5] rounded-2xl" />
											<div class="w-full p-5 bg-[#1F2430] rounded-2xl relative border-2 border-white min-h-[400px] flex flex-col justify-start">
												<div class="flex flex-col p-5 items-center justify-center">
													<Image
														src={item.photo}
														alt={item.author}
														width={96}
														height={96}
														class="rounded-full"
														loading="lazy"
													/>
													<p class="text-sm pt-5 line-clamp-[1] text-center overflow-hidden">
														{item.author}
													</p>
													<p class="text-xs text-center pt-1 line-clamp-[2] overflow-hidden">
														{item.position}
													</p>
													<p class="text-[10px] pt-1">
														{item.date}
													</p>
												</div>
												<p class="text-[10px] sm:text-[12px] line-clamp-[7] overflow-hidden">
													{item.text}
												</p>
											</div>
										</div>
									</div>
								))
						}
					</div>
				</div>
				<a
					href="https://www.linkedin.com/in/jhonrivero/details/recommendations/"
					target="_blank"
					class="flex flex-row items-center justify-end gap-1 text-xs hover:underline transition duration-700"
				>
					VER TODOS
					<span>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="20"
							height="20"
							viewBox="0 0 24 24"
						>
							<path
								fill="#ffffff"
								d="M6.189 17.289L5.5 16.6L15.58 6.5H6.289v-1h11v11h-1V7.208z"
							></path>
						</svg>
					</span>
				</a>
			</div>
		</section>

		<section id="contact">
			<div class="fade-in w-full space-y-5">
				<p>CONTACTO</p>

				<div class="w-full flex flex-wrap items-center gap-5">
					<a
						href="https://www.linkedin.com/in/jhonrivero/"
						target="_blank"
						class="flex flex-row items-center gap-2 text-sm border rounded-md py-2.5 px-5 bg-white/10 hover:bg-white/20 transition duration-500 text-white"
					>
						<span>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="24px"
								height="24px"
								viewBox="0 0 24 24"
								><path
									fill="currentColor"
									d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z"
								></path></svg
							>
						</span>
						LINKEDIN
					</a>

					<a
						href="https://github.com/JhonRiv21"
						target="_blank"
						class="flex flex-row items-center gap-2 text-sm border rounded-md py-2.5 px-5 bg-white/10 hover:bg-white/20 transition duration-500 text-white"
					>
						<span>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="24"
								height="24"
								viewBox="0 0 24 24"
								><path
									fill="currentColor"
									d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
								></path></svg
							>
						</span>
						GITHUB
					</a>

					<a
						href="https://wa.me/+573107878320"
						target="_blank"
						class="flex flex-row items-center gap-2 text-sm border rounded-md py-2.5 px-5 bg-white/10 hover:bg-white/20 transition duration-500 text-white"
					>
						<span>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="24"
								height="24"
								viewBox="0 0 24 24"
								><path
									fill="currentColor"
									d="M12.04 2c-5.46 0-9.91 4.45-9.91 9.91c0 1.75.46 3.45 1.32 4.95L2.05 22l5.25-1.38c1.45.79 3.08 1.21 4.74 1.21c5.46 0 9.91-4.45 9.91-9.91c0-2.65-1.03-5.14-2.9-7.01A9.82 9.82 0 0 0 12.04 2m.01 1.67c2.2 0 4.26.86 5.82 2.42a8.23 8.23 0 0 1 2.41 5.83c0 4.54-3.7 8.23-8.24 8.23c-1.48 0-2.93-.39-4.19-1.15l-.3-.17l-3.12.82l.83-3.04l-.2-.32a8.2 8.2 0 0 1-1.26-4.38c.01-4.54 3.7-8.24 8.25-8.24M8.53 7.33c-.16 0-.43.06-.66.31c-.22.25-.87.86-.87 2.07c0 1.22.89 2.39 1 2.56c.14.17 1.76 2.67 4.25 3.73c.59.27 1.05.42 1.41.53c.59.19 1.13.16 1.56.1c.48-.07 1.46-.6 1.67-1.18s.21-1.07.15-1.18c-.07-.1-.23-.16-.48-.27c-.25-.14-1.47-.74-1.69-.82c-.23-.08-.37-.12-.56.12c-.16.25-.64.81-.78.97c-.15.17-.29.19-.53.07c-.26-.13-1.06-.39-2-1.23c-.74-.66-1.23-1.47-1.38-1.72c-.12-.24-.01-.39.11-.5c.11-.11.27-.29.37-.44c.13-.14.17-.25.25-.41c.08-.17.04-.31-.02-.43c-.06-.11-.56-1.35-.77-1.84c-.2-.48-.4-.42-.56-.43c-.14 0-.3-.01-.47-.01"
								></path></svg
							>
						</span>
						WHATSAPP
					</a>

					<a
						href="/Hoja de vida Jhon Rivero.pdf"
						target="_blank"
						class="flex flex-row items-center gap-2 text-sm border rounded-md py-2.5 px-5 bg-white/10 hover:bg-white/20 transition duration-500 text-white"
					>
						<span>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="24"
								height="24"
								viewBox="0 0 24 24"
								><g
									fill="none"
									stroke="currentColor"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="1.5"
									><path
										d="M4 21.4V2.6a.6.6 0 0 1 .6-.6h11.652a.6.6 0 0 1 .424.176l3.148 3.148A.6.6 0 0 1 20 5.75V21.4a.6.6 0 0 1-.6.6H4.6a.6.6 0 0 1-.6-.6M8 10h8m-8 8h8m-8-4h4"
									></path><path
										d="M16 2v3.4a.6.6 0 0 0 .6.6H20"
									></path></g
								></svg
							>
						</span>
						HOJA DE VIDA / CV
					</a>
				</div>
			</div>
		</section>
	</section>
</Layout>